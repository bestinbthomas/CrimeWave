<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="6dp"
    android:background="@color/cardview_dark_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:id="@+id/ForceCard">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ForceID"
                        android:text="sampleforce"
                        style="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                        android:fontFamily="@font/roboto_light"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="sampleName"
                        android:id="@+id/ForceName"
                        android:fontFamily="@font/roboto_regular"
                        style="@style/TextAppearance.AppCompat.Headline"
                        />

                </LinearLayout>


            </android.support.v7.widget.CardView>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ForceExtra"
                android:background="@color/cardview_dark_background"
                android:visibility="visible"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Description : "
                    style="@style/TextAppearance.AppCompat.Small.Inverse"
                    android:id="@+id/descLabel"
                    />
                <TextView
                    android:id="@+id/ForceDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is a sample description"
                    style="@style/TextAppearance.AppCompat.Small.Inverse"
                    android:layout_below="@+id/descLabel"
                    android:fontFamily="@font/roboto_regular"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:id="@+id/TelephoneLabel"
                    android:layout_below="@+id/ForceDesc"
                    android:text="Telephone :"
                    style="@style/TextAppearance.AppCompat.Small.Inverse"
                    />
                <TextView
                    android:id="@+id/ForceTelephone"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_height="wrap_content"
                    android:text= "101"
                    android:layout_marginLeft="8dp"
                    android:textIsSelectable="true"
                    style="@style/TextAppearance.AppCompat.Small.Inverse"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_toEndOf="@+id/TelephoneLabel"
                    android:layout_alignTop="@+id/TelephoneLabel"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/urlLabel"
                    android:layout_below="@+id/ForceTelephone"
                    android:fontFamily="@font/roboto_regular"
                    android:text="URL :"
                    style="@style/TextAppearance.AppCompat.Small.Inverse"
                    />
                <TextView
                    android:id="@+id/ForceUrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text= "This is a sample url"
                    android:layout_marginLeft="8dp"
                    style="@style/TextAppearance.AppCompat.Small.Inverse"
                    android:textColor="@android:color/holo_blue_dark"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_toEndOf="@+id/urlLabel"
                    android:layout_alignTop="@+id/urlLabel"
                    />

                <LinearLayout
                    android:id="@+id/ForceEngages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ForceUrl"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginLeft="30dp"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp" >

                    <ImageView
                        android:id="@+id/engage1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:src="@mipmap/twitter"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/engage2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:src="@mipmap/facebook"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/engage3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:src="@mipmap/youtube"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/engage4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:src="@mipmap/flickr"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/engage5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_web"
                        android:visibility="gone" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

