<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="6dp"
    android:background="@color/cardview_dark_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:id="@+id/ForceCard">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ForceID"
                        android:text="sampleforce"
                        style="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="sampleName"
                        android:id="@+id/ForceName"
                        style="@style/TextAppearance.AppCompat.Headline"
                        />
                    <TextView
                        android:id="@+id/loadingtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@android:color/holo_red_dark"
                        android:visibility="gone"/>
                </LinearLayout>


            </android.support.v7.widget.CardView>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ForceExtra"
                android:background="@color/cardview_dark_background"
                android:visibility="visible"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description : "
                    style="@style/TextAppearance.AppCompat.Small.Inverse"
                    android:id="@+id/descLabel"
                    />
                <TextView
                    android:id="@+id/ForceDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is a sample description"
                    style="@style/TextAppearance.AppCompat.Small.Inverse"
                    android:layout_below="@+id/descLabel"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TelephoneLabel"
                    android:layout_below="@+id/ForceDesc"
                    android:text="Telephone :"
                    style="@style/TextAppearance.AppCompat.Small.Inverse"
                    />
                <TextView
                    android:id="@+id/ForceTelephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text= "101"
                    android:layout_marginLeft="8dp"
                    style="@style/TextAppearance.AppCompat.Small.Inverse"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_toEndOf="@+id/TelephoneLabel"
                    android:layout_alignTop="@+id/TelephoneLabel"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/urlLabel"
                    android:layout_below="@+id/ForceTelephone"
                    android:text="URL :"
                    style="@style/TextAppearance.AppCompat.Small.Inverse"
                    />
                <TextView
                    android:id="@+id/ForceUrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text= "This is a sample url"
                    android:layout_marginLeft="8dp"
                    style="@style/TextAppearance.AppCompat.Small.Inverse"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_toEndOf="@+id/urlLabel"
                    android:layout_alignTop="@+id/urlLabel"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ForceUrl"
                    android:id="@+id/ForceEngages"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:layout_marginLeft="30dp"/>

            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

